{
	"$schema": "https://www.schemastore.org/package.json",
	"name": "root",
	"private": true,
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev",
		"dev:api": "pnpm dev --filter @repo/api",
		"dev:web": "pnpm dev --filter @repo/web",
		"lint": "turbo run lint",
		"format": "turbo run format ",
		"check-types": "turbo run check-types",
		"prepare": "husky"
	},
	"lint-staged": {
		"**/*.{ts,tsx,js,jsx}": "biome check --write",
		"**/*.{json,css,html}": "biome format --write"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.9",
		"husky": "9.1.7",
		"lint-staged": "16.2.7",
		"turbo": "2.6.3",
		"typescript": "5.9.3"
	},
	"packageManager": "pnpm@10.26.0",
	"engines": {
		"node": ">=18"
	},
	"dependencies": {
		"zod": "^4.2.1"
	}
}
