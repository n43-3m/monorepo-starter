{
	"name": "root",
	"private": true,
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev",
		"lint": "turbo run lint",
		"lint:format": "turbo run lint:format",
		"format": "biome format --write ",
		"check-types": "turbo run check-types",
		"prepare": "husky"
	},
	"lint-staged": {
		"**/*.{ts,tsx,js,jsx}": " pnpm lint:fix",
		"**/*.{json,css,html}": "pnpm format"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.9",
		"husky": "9.1.7",
		"lint-staged": "16.2.7",
		"turbo": "2.6.3",

		"typescript": "5.9.3"
	},
	"packageManager": "pnpm@9.0.0",
	"engines": {
		"node": ">=18"
	}
}
