{
	"extends": "@repo/typescript-config/base.json",
	"compilerOptions": {
		"target": "ESNext",
		"module": "NodeNext",
		"strict": true,
		"verbatimModuleSyntax": true,
		"skipLibCheck": true,
		"lib": ["ES2022"],
		"jsx": "react-jsx",
		"jsxImportSource": "hono/jsx",
		"outDir": "./dist",
		"baseUrl": "./",
		"paths": { "@/*": ["./src/*"] }
	},
	"exclude": ["node_modules", "dist"],
	"include": ["src"]
}
