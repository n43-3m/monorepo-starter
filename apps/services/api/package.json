{
	"name": "@repo/api",
	"type": "module",
	"scripts": {
		"dev": "bun --watch --env-file .env src/index.ts",
		"lint": "biome lint --write",
		"lint:format": "biome check --write",
		"format": "biome format --write",
		"build": "tsc",
		"start": "bun dist/index.js",
		"db:generate": "drizzle-kit generate --config src/lib/drizzle.config.ts",
		"db:migrate": "drizzle-kit migrate --config src/lib/drizzle.config.ts",
		"db:push": "drizzle-kit push --config src/lib/drizzle.config.ts",
		"db:dropMigration": "drizzle-kit drop --config src/lib/drizzle.config.ts",
		"db:studio": "drizzle-kit studio --config src/lib/drizzle.config.ts"
	},
	"dependencies": {
		"@hono/zod-validator": "^0.7.4",
		"dotenv": "^17.2.3",
		"drizzle-orm": "^0.44.7",
		"hono": "^4.10.3",
		"zod": "^4.1.12"
	},
	"devDependencies": {
		"@types/bun": "^1.3.1",
		"drizzle-kit": "^0.31.5",
		"@repo/biome-config": "workspace:*",
		"@repo/typescript-config": "workspace:*",
		"@repo/envparser": "workspace:*"
	}
}
